#!/bin/bash

#SBATCH --partition=gpu_shared_course
#SBATCH --gres=gpu:1
#SBATCH --job-name=GenerateMNISTFromScratch
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --time=10:00:00
#SBATCH --mem=32000M
#SBATCH --output=slurm/output_%A.out

module purge
module load 2021
module load Anaconda3/2021.05

# Activate your environment
source deactivate
source activate gcn-gpu
# Run your code
cd cgn_framework/
# python mnists/generate_data.py --dataset colored_MNIST --weight_path mnists/experiments/cgn_colored_MNIST_2022_01_19_15_29_47_colored_MNIST_scratch/weights/ckp_56000.pth
# python mnists/generate_data.py --dataset double_colored_MNIST --weight_path mnists/experiments/cgn_double_colored_MNIST_2022_01_19_16_20_47_double_colored_MNIST_scratch/weights/ckp_46000.pth
# python mnists/generate_data.py --dataset wildlife_MNIST --weight_path mnists/experiments/cgn_wildlife_MNIST_2022_01_19_17_03_37_wildlife_MNIST_scratch/weights/ckp_46000.pth

python mnists/generate_data.py --dataset colored_MNIST --weight_path mnists/experiments/cgn_colored_MNIST_2022_01_19_15_29_47_colored_MNIST_scratch/weights/ckp_56000.pth --no_cfs 10 --dataset_size 100000
python mnists/generate_data.py --dataset double_colored_MNIST --weight_path mnists/experiments/cgn_double_colored_MNIST_2022_01_19_16_20_47_double_colored_MNIST_scratch/weights/ckp_46000.pth --no_cfs 10 --dataset_size 100000
python mnists/generate_data.py --dataset wildlife_MNIST --weight_path mnists/experiments/cgn_wildlife_MNIST_2022_01_19_17_03_37_wildlife_MNIST_scratch/weights/ckp_46000.pth --no_cfs 10 --dataset_size 100000

python mnists/train_classifier.py --dataset colored_MNIST_counterfactual
python mnists/train_classifier.py --dataset double_colored_MNIST_counterfactual
python mnists/train_classifier.py --dataset wildlife_MNIST_counterfactual